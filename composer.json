{
    "name": "rmk/http",
    "description": "Package dealing with HTTP messages, request handlers, middlewares",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "guzzlehttp/psr7": "^1.6",
        "php-ds/php-ds": "^1.2",
        "psr/event-dispatcher": "^1.0",
        "rmk/event-dispatcher": "^1.0",
        "rmk/router": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "roave/security-advisories": "dev-master",
        "rmk/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Rmk\\Http\\": "./src/Http/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rmk\\HttpTests\\": "./tests/HttpTests/"
        }
    },
    "authors": [
        {
            "name": "Kiril Savchev",
            "email": "k.savchev@gmail.com"
        }
